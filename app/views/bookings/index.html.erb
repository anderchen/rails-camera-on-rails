<h1>Your Bookings:</h1>

<table class="table">
  <thead>
    <tr>
      <th>Rented from</th>
      <th>Device</th>
      <th>Return Date</th>
      <th>Total Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.device.user.first_name %> <%= booking.device.user.last_name %></td>
        <td><%= booking.device.name %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.cost %></td>
      </tr>
    <% end %>
  </tbody>
</table>
