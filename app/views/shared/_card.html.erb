
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url(<%= device.default_photo %>);">


  <div class="card-category"><%= device_category %></div>

  <div class="card-description">
    <h2><%= device_name %></h2>
    <p><%= device_description %></p>
  </div>
  <div class="links-owner">
    <% if policy( device ).edit? %>
      <%= link_to 'Edit', edit_path %>
    <% end %>
    <% if policy( device ).destroy? %>
      <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

    <%= link_to "Show", device_path %>
  </div>
</div>
